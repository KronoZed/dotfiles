##################
#      GTK       #
##################

gtk-theme-name="Menda"                            # include "/usr/share/themes/Menda/gtk-2.0/gtkrc"

##################
#     ICONS      #
##################

gtk-icon-theme-name="Menda-Circle"                #
gtk-fallback-icon-theme="Menda-Circle"            #

##################
#     FONTS      #
##################

style "user-font"
{
    font_name="terminus 14"
}
widget_class "*" style "user-font"
gtk-font-name="terminus 14"                       #

##################
#    TOOLBARS    #
##################

#gtk-toolbar-style   = GTK_TOOLBAR_ICONS          # Только значки
#gtk-toolbar-style   = GTK_TOOLBAR_TEXT	          # Только текст
gtk-toolbar-style    = GTK_TOOLBAR_BOTH	          # Значки и текст
#gtk-toolbar-style   = GTK_TOOLBAR_BOTH_HORIZ	  # Значки и текст справа от них


gtk-menu-images=1                                 #
gtk-button-images=1                               #
